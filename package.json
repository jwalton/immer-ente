{
    "name": "immer-ente",
    "version": "0.0.0-semantic-release",
    "description": "React state management with immer",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist/**/*"
    ],
    "scripts": {
        "test": "npm run build && npm run lint && npm run test:unittest",
        "build": "tsc",
        "clean": "rm -rf dist types coverage",
        "test:unittest": "tsc -p test && nyc mocha 'test/**/*.@(ts|tsx|js|jsx)'",
        "test:coverage": "tsc -p test && nyc mocha 'test/**/*.@(ts|tsx|js|jsx)'",
        "lint": "npm run lint:source && npm run lint:tests",
        "lint:source": "eslint --ext .ts --ext .tsx src",
        "lint:tests": "eslint --ext .ts --ext .tsx test",
        "prepare": "husky install && npm run build",
        "prepublishOnly": "npm run build && npm test",
        "semantic-release": "semantic-release"
    },
    "lint-staged": {
        "src/**/*.ts": [
            "eslint --ext ts --ext tsx"
        ],
        "test/**/*.ts": [
            "eslint --ext ts --ext tsx"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jwalton/immer-ente.git"
    },
    "keywords": [
        "immer",
        "redux",
        "state management",
        "hooks"
    ],
    "author": {
        "name": "Jason Walton",
        "email": "dev@lucid.thedreaming.org",
        "url": "https://thedreaming.org"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/exegesis-js/jwalton/immer-ente/issues"
    },
    "homepage": "https://github.com/jwalton/immer-ente#readme",
    "peerDependencies": {
        "react": ">= 16.13.1 < 18",
        "react-dom": ">= 16.13.1 < 18"
    },
    "devDependencies": {
        "@testing-library/react": "^12.0.0",
        "@types/chai": "^4.2.14",
        "@types/chai-dom": "0.0.10",
        "@types/mocha": "^8.0.4",
        "@types/node": "^18.14.2",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "@types/sinon": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^4.9.0",
        "@typescript-eslint/parser": "^4.9.0",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "chai-dom": "^1.8.2",
        "coveralls": "^3.1.0",
        "eslint": "^7.14.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-react": "^7.21.5",
        "husky": "^7.0.1",
        "jsdom": "^16.2.2",
        "jsdom-global": "^3.0.2",
        "lint-staged": "^11.0.0",
        "mocha": "^9.0.2",
        "nyc": "^15.0.1",
        "prettier": "^2.2.1",
        "pretty-quick": "^3.1.0",
        "promise-tools": "^2.1.0",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "semantic-release": "^17.3.0",
        "sinon": "^11.1.1",
        "ts-node": "^10.0.0",
        "typescript": "^4.1.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged && lint-staged"
        }
    },
    "dependencies": {
        "immer": "^9.0.2"
    }
}
